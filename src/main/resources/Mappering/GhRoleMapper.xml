  <!-- 根据用户所属角色id查询权限 -->
  <select id="selectPermissionsByrId" resultMap="ResultMap" parameterType="java.lang.Integer">
    SELECT gh_role.r_name,gh_role.r_remarks,GROUP_CONCAT(gh_permissions.p_name) as permissions_list FROM gh_role
    INNER JOIN gh_role_permissions ON gh_role.r_id = gh_role_permissions.a_r_id
    INNER JOIN gh_permissions ON gh_role_permissions.a_p_id = gh_permissions.p_id
    WHERE  gh_role.r_id = #{rId,jdbcType=INTEGER}
    GROUP BY gh_role.r_id;
  </select>

